<?xml version="1.0" encoding="utf-8"?>
<!--XML implementation of Card Layout-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/nightDark_or_dayWhite">

        <ImageView
            android:id="@+id/song_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/song_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/song_default_name"
                android:textColor="@color/nightWhite_or_dayBlack"
                android:textSize="13sp"
                android:textStyle="bold"
                android:maxLength="11"/>

            <TextView
                android:id="@+id/song_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/author_default_name"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:maxLength="12"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_controls"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            >

            <ImageView
                android:id="@+id/previous"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/previous"
                android:layout_marginRight="10dp"
                >
            </ImageView>

            <ImageView
                android:id="@+id/pause_play_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/pause"
                android:layout_marginRight="10dp"
                >
            </ImageView>

            <ImageView
                android:id="@+id/next"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/next">
            </ImageView>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>